<body>
  <% if user_signed_in? %>
  Welcome, <%= current_user.email %>.<br><br>

  <h1>Todas as listas</h1>

  <table>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.tipo %></td>
      <td><%= link_to "Show", list %></td>
      <td><%= link_to "Edit", edit_list_path(list) %></td>
      <td><%= link_to "Remove", list, method: :delete, data: { confirm: "Are you sure?" } %></td>
      <td><%= button_to "+", list_favorites_path(list) %></td>
    </tr>
  <% end %>
  </table>

  <br>

  <%= link_to "Nova Lista", new_list_path %>

  <br><br>

  <h1>Listas Favoritas</h1>
  <%= render "favorites/index" %>
  <br><br>

  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> |
  <%= link_to('Edit registration', edit_user_registration_path) %>
</li>

<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %> |
  <%= link_to('Register', new_user_registration_path)  %>
  </li>
<% end %>
</body>
